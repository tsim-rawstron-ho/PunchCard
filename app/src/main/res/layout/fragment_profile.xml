<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.punchcard.PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/rlProfileInfo"
        android:background="@color/light_grey">
        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/person_placeholder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_alignTop="@+id/ivProfileImage"
            android:textSize="18sp"
            android:text="Name"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_alignBottom="@+id/ivProfileImage"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="Email"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlProfileInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/punch_card_blue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/llUpcoming">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upcoming"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/calendar_858585_128"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_alignTop="@+id/llUpcoming"
            android:layout_toRightOf="@+id/llUpcoming"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Past"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"/>
            <ImageView
                android:id="@+id/ivPastShifts"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/calendar_858585_128"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
