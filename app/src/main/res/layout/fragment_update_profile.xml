<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.codepath.punchcard.fragments.UpdateProfileFragment"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/popup_bg"
    android:layout_height="match_parent">
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText android:id="@+id/etUsername"
            android:hint="User Name"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etPasswordCurrent"
            android:inputType="textPassword"
            android:hint="Current Password"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.gc.materialdesign.views.ButtonRectangle android:id="@+id/btnChangePw"
            android:background="@color/accent_color"
            android:text="Change Password"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etPasswordNew1"
            android:visibility="gone"
            android:inputType="textPassword"
            android:hint="New Password"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etPasswordNew2"
            android:visibility="gone"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etFirstName"
            android:hint="First Name"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText android:id="@+id/etLastName"
            android:hint="Last Name"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:text="Role"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner android:id="@+id/spRole"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.gc.materialdesign.views.ButtonRectangle android:id="@+id/btnCancel"
                android:background="@color/secondary_text"
                android:text="@string/cancel"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="start" />

            <com.gc.materialdesign.views.ButtonRectangle android:id="@+id/btnSave"
                android:background="@color/accent_color"
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
