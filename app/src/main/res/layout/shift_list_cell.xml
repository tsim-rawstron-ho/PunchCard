<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    >

    <com.pkmmte.view.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/shiftimageView"
        android:src="@drawable/person_placeholder"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="2dp"
        app:shadow="true"
        />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Harris, Alvin, Ash"
      android:id="@+id/shift_employees"
      android:textSize="15sp"
      android:textStyle="bold"
      android:layout_alignParentTop="true"
      android:layout_toRightOf="@+id/shiftimageView"
      />

  <TextClock
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/start_time"
      android:textColor="@color/secondary_text"
      android:layout_below="@+id/shift_employees"
      android:layout_alignLeft="@+id/shift_employees"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="-"
      android:textColor="@color/secondary_text"
      android:id="@+id/hypen"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_alignBottom="@+id/start_time"
      android:layout_toRightOf="@+id/start_time"
      />
  <TextClock
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/end_time"
      android:textColor="@color/secondary_text"
      android:layout_alignBottom="@+id/start_time"
      android:layout_toRightOf="@+id/hypen"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="3/14"
        android:textColor="@color/secondary_text"
        android:id="@+id/datetv"
        android:layout_alignBottom="@+id/end_time"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>