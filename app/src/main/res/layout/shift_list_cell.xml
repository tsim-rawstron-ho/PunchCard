<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:padding="10dp"
    >
  <ImageView android:id="@+id/imageView"
      android:layout_margin="10dp"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@mipmap/ic_launcher"
      />
  <TextView android:id="@+id/shift_employees"
      android:textSize="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Harris, Alvin, Ash"
      android:layout_alignParentTop="true"
      android:layout_toEndOf="@id/imageView"
      android:layout_alignTop="@id/imageView"
      android:layout_margin="5dp"
      />

  <TextClock android:id="@+id/start_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/shift_employees"
      android:layout_alignLeft="@+id/shift_employees"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="-"
      android:id="@+id/hypen"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_alignBottom="@+id/start_time"
      android:layout_toRightOf="@+id/start_time"
      />
  <TextClock
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/end_time"
      android:layout_alignBottom="@+id/start_time"
      android:layout_toRightOf="@+id/hypen"
      />
</RelativeLayout>