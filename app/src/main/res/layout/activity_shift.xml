<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.punchcard.activities.ShiftActivity"
    >

    <com.google.android.gms.maps.MapView android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200sp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.codepath.punchcard.SlideToUnlock android:id="@+id/slidetounlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        su:text="Slide to Start"
        android:layout_alignBottom="@+id/map"
        android:layout_marginTop="201dp" />

    <RelativeLayout android:id="@+id/rlInShiftControls"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="false">

        <RelativeLayout android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button android:id="@+id/btnDetails"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shift_details"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ToggleButton android:id="@+id/btnPause"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pause_shift"
                android:textOn="@string/resume_shift"
                android:textOff="@string/pause_shift"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_alignBottom="@+id/btnDetails"
                android:layout_toRightOf="@+id/btnDetails"
                android:layout_toEndOf="@+id/btnDetails" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout android:id="@+id/rlNextShift"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:id="@+id/ivClock"
                android:src="@drawable/clock"
                android:layout_margin="15dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="image" />

            <TextView android:id="@+id/tvStartsIn"
                android:text="Shift starts in 16 minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/ivClock"
                android:layout_toEndOf="@id/ivClock"
                android:layout_marginTop="19dp"
                android:padding="10dp" />

            <TextView android:id="@+id/tvWeather"
                android:text="Weather: Sunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvStartsIn"
                android:layout_toRightOf="@id/ivClock"
                android:layout_toEndOf="@id/ivClock"
                android:padding="10dp" />

            <TextView android:id="@+id/tvNote"
                android:text="Please bring sunscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeather"
                android:layout_toRightOf="@id/ivClock"
                android:layout_toEndOf="@id/ivClock"
                android:padding="10dp" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/rlInProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Chronometer android:id="@+id/chronometer"
                android:textSize="@dimen/h1"
                android:text="@string/time_place_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </RelativeLayout>

    <ListView android:id="@+id/lvSession"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlInShiftControls" />


</RelativeLayout>
